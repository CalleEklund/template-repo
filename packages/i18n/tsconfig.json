{
  "extends": "@template-repo/typescript/tsconfig",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "target": "esnext",
    "esModuleInterop": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./src",
    "resolveJsonModule": true, // This line allows importing JSON files
    "declaration": true, // Ensure declaration files are generated
    "declarationMap": true, // Generate declaration map files
    "emitDeclarationOnly": false // Ensure both JS and .d.ts files are emitted
  },
    "include": ["./src/**/*", "./src/**/*.json"],

  "exclude": ["node_modules", "dist"]
}
