{
  "name": "api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "client:build": "openapi-typescript openapi-spec.json --output ../../packages/api-client/src/types.ts",
    "client:watch": "node watch.js",
    "migrate:up": "ts-node -r tsconfig-paths/register src/migrate.ts up",
    "migrate:down": "ts-node -r tsconfig-paths/register src/migrate.ts down",
    "migrate:create": "node-pg-migrate create",
    "typecheck": "tsc --project tsconfig.json"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@qte/elephas-nest": "^0.1.7",
    "@qte/nest-border-patrol": "^0.3.0",
    "i18next-http-middleware": "^3.8.0",
    "js-yaml": "^4.1.0",
    "node-pg-migrate": "7.3.2",
    "packages": "^0.0.8",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.36.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@template-repo/typescript": "workspace:^",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "openapi-typescript": "^7.9.1",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0"
  },
  "yarn.build": {
    "input": "src",
    "output": "dist"
  }
}
