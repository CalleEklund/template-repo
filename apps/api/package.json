  "scripts": {
    "start": "resolve-tspaths && node ./dist/index.js",
    "start:dev": "tsc-watch --project tsconfig.build.json --onSuccess \"pnpm start\"",
    "build": "tsc --project tsconfig.build.json && resolve-tspaths",
    "build:dependencies": "pnpm nx build",
    "migrate": "atlas schema apply --dev-url \"docker://postgres/17/schema\"  -u \"postgres://postgres:password@localhost:5432/template-repo?sslmode=disable\" --to file://schema.sql",
    "api:generate": "pnpm openapi-typescript ./openapi-spec.json -o ../../packages/api-client/src/types.ts",
    "typecheck": "tsc --project tsconfig.json",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint:check": "eslint --max-warnings=0 .",
    "lint:fix": "eslint --fix ."
  },
  "dependencies": {
    "@anatine/zod-openapi": "^2.2.8",
    "@dotenvx/dotenvx": "^1.51.0",
    "@nestjs/common": "^11.0.9",
    "@nestjs/core": "^11.0.9",
    "@nestjs/platform-express": "^11.0.9",
    "@nestjs/swagger": "^11.0.3",
    "@testcontainers/postgresql": "^11.6.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "slonik": "^46.4.0",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@template-repo/typescript": "workspace:^",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.4",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "openapi-typescript": "^7.9.1",
    "resolve-tspaths": "^0.8.23",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsc-watch": "^7.1.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.7.3"
  }
